/* styles.css */
body {
  font-family: sans-serif;
  background-color: #f0f0f0;
  margin: 0;
  padding: 2rem;
  display: flex;
  justify-content: center;
  align-items: center;
}

.calculator {
  background: white;
  padding: 2rem;
  border-radius: 8px;
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
}

input, button {
  padding: 0.5rem;
  margin: 0.5rem;
  font-size: 1rem;
}
